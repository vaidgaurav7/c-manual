#include <iostream>
#include <string>
using namespace std;

int main() {
   int a1,b1,i=0,j=0;
    char a[10000],b[10000];
   
    scanf("%s\n%s",&a,&b);
    while(a[i]!='\0')
        {i++;}
    while(b[j]!='\0')
        {j++;}
    printf("%d %d\n",i,j);
    printf("%s%s\n",a,b);
    char c;
    c=a[0];
    a[0]=b[0];
    b[0]=c;
    printf("%s %s",a,b);
    return 0;
}
